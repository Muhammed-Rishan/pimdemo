{
  "name": "pimcore/skeleton",
  "type": "project",
  "license": "GPL-3.0-or-later",
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "process-timeout": 0,
    "allow-plugins": {
      "symfony/runtime": true
    }
  },
  "prefer-stable": true,
  "require": {
    "matomo/device-detector": "^6.1",
    "mtdowling/cron-expression": "^1.2",
    "pimcore/admin-ui-classic-bundle": "^1.0",
    "pimcore/bundle-generator": "^2.0",
    "pimcore/pimcore": "^11.0.4",
    "symfony/dotenv": "^6.2",
    "symfony/monolog-bundle": "^3.8",
    "symfony/runtime": "^6.2"
  },
  "require-dev": {
    "codeception/codeception": "^5.0.3",
    "codeception/module-symfony": "^3.1.0",
    "symfony/maker-bundle": "^1.51"
  },
  "suggest": {
    "pimcore/data-hub": "Universal data interface for GraphQL, CSV and other formats"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/",
      "Pimcore\\Model\\DataObject\\": "var/classes/DataObject",
      "DemoBundle\\": "src/DemoBundle/src",
      "CheckBundle\\": "src/CheckBundle/src",
      "ProductBundle\\": "bundles/ProductBundle/src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-create-project-cmd": "Pimcore\\Composer::postCreateProject",
    "post-install-cmd": [
      "Pimcore\\Composer::postInstall",
      "@pimcore-scripts"
    ],
    "post-update-cmd": [
      "Pimcore\\Composer::postUpdate",
      "@pimcore-scripts"
    ],
    "pimcore-scripts": [
      "Pimcore\\Composer::clearCache",
      "Pimcore\\Composer::installAssets"
    ]
  }
}
